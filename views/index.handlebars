<h1>Eat da Burger!</h1>
<img src="../assets/images/burger-outline-filled.png" alt="burger">

<div class="row">
  <div class="col-md-5 left">
    <h2>Burgers that need to be eaten!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-md-2 center">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
      </div>

      <div class="form-group">
        <label for="eat">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> devoured!<br>
        <input type="radio" name="devoured" value="0"> Eat Me!
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>

  <div class="col-md-5 right">
    <h2>Burgers that have been devoured!</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block}}
      {{/if}}
      {{/each}}
    </ul>
  </div>


</div>